extends index

block append content
  div.container
    if list
      - var aux = list.data
      table.table
        thead
          tr
            th(scope='col') Nome
            if aux[0].artist
              th(scope='col') Artista
            if aux[0].release
              th(scope='col') Release
        tbody
          each item in aux
            tr
              td= item.name
              if item.artist
                td= item.artist
              if item.release
                td= item.release
    else
      p Nenhum resultado foi encontrado.
