extends layout

block nav
  nav#nav.navbar.navbar-nav.navbar-expand-lg.navbar-dark.bg-dark
    div.container
      span.navbar-brand.mb-0.h1.mr-auto Navbar
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      div#navbarNav.collapse.navbar-collapse
        ul.navbar-nav.ml-auto
          li.nav-item.active
            a.nav-link Home
          li.nav-item
            a.nav-link My Albums
          li.nav-item
            a.nav-link Add Album

block header
  header#header.jumbotron.text-center
    h1.display-1= title
    p.lead #{user.name}, welcome to #{title}
    p.lead Your e-mail is #{user.email}...

block content
  section#busca.container(style='margin-bottom:2rem')
    form#searchForm(method='GET' action='/search')
      div.form-row
        div.col-2
          label.sr-only(for='tipo') Categoria
          select#searchOption.form-control(name='tipo')
            option(value='album' selected='selected') Álbum
            option(value='track') Música
            option(value='artist') Artista
        div.col
          label.sr-only(for='nome') Digite sua busca
          input#searchData.form-control(type='text', placeholder='Buscar...' name='nome')
        div.col-2
          button.btn.btn-primary.btn-block(type='submit')
            i.fas.fa-search
  section#content.container

block append scripts
  script(src='/javascripts/ajax.js')